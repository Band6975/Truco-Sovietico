<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Truco Soviético</title>
  <style>
    body { font-family: sans-serif; text-align: center; padding: 20px; }
    .cartas { margin: 20px; }
    button { margin: 10px; padding: 10px 20px; font-size: 18px; }
  </style>
</head>
<body>
  <h1>Truco Soviético</h1>
  <h2>Suas Cartas:</h2>
  <div class="cartas" id="cartas">
    <!-- Os botões das cartas vão aparecer aqui -->
  </div>

  <h2 id="mensagem"></h2>

  <script>
    async function carregarCartas() {
      const res = await fetch('/cartas');
      const cartas = await res.json();

      const container = document.getElementById('cartas');
      container.innerHTML = ''; // Limpa

      cartas.forEach((carta, i) => {
        const btn = document.createElement('button');
        btn.textContent = carta;
        btn.onclick = () => jogarCarta(i);
        container.appendChild(btn);
      });
    }

    async function jogarCarta(indice) {
      const res = await fetch(`/jogar/${indice}`, { method: 'POST' });
      const data = await res.json();
      document.getElementById('mensagem').textContent = data.resultado || '';
      carregarCartas(); // Atualiza cartas
    }

    carregarCartas();
  </script>
</body>
</html>
